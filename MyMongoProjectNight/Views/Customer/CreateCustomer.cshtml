@model MyMongoProjectNight.Dtos.CustomerDtos.CreateCustomerDto
@{
    ViewData["Title"] = "CreateCustomer";
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container mt-2 mb-3">
    <form method="post">
        <label>Müşteri Adı</label>
        <input type="text" asp-for="CustomerName" class="form-control mb-2"/>

        <label>Müşteri Soyadı</label>
        <input type="text" asp-for="CustomerSurname" class="form-control mb-2" />

        <button class="btn btn-info">Müşteriyi Ekle</button>
    </form>
</div>

